<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>hibernate.connection.driver_class</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>

  <context-param>
    <param-name>hibernate.connection.url</param-name>
    <param-value>jdbc:mysql://localhost/onlineshopping</param-value>
  </context-param>

  <context-param>
    <param-name>hibernate.connection.username</param-name>
    <param-value>root</param-value>
  </context-param>

  <context-param>
    <param-name>hibernate.connection.password</param-name>
    <param-value>cdac</param-value>
  </context-param>

  <context-param>
    <param-name>hibernate.dialect</param-name>
    <param-value>org.hibernate.dialect.MySQLDialect</param-value>
  </context-param>

  <context-param>
    <param-name>hibernate.hbm2ddl.auto</param-name>
    <param-value>validate</param-value>
  </context-param>

</web-app>